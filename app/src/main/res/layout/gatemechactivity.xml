<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/log" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@menu/homemenu" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/gatemechcourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subjects"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/orange"/>


    <TextView
        android:id="@+id/subject1"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:text="Mechanics of Solids"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textColor="@color/teal_700"
        android:layout_below="@id/gatemechcourses"/>

    <TextView
        android:id="@+id/subject2"
        android:layout_width="3000dp"
        android:layout_height="110dp"
        android:text="Fluid Mechanics Hydraulic Machines"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/subject1"
        />
    <TextView
        android:id="@+id/subject3"
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:text="Production Technology"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textColor="@color/purple_200"
        android:layout_below="@id/subject2"
        />

    <TextView
        android:id="@+id/subject4"
        android:layout_width="250dp"
        android:layout_height="110dp"
        android:text="Kinematics of Machinery"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:layout_below="@id/subject3"
        />

    <TextView
        android:id="@+id/subject5"
        android:layout_width="300dp"
        android:layout_height="145dp"
        android:text="Computer Aided Engineering Drawing Practice"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#30ffffff"
        android:padding="20dp"
        android:textColor="@color/orange"
        android:layout_below="@id/subject4"
        />
    <Button
        android:id="@+id/BuyCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject5"
        android:text="Buy Courses"
        android:textColor="@color/teal_200"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        />

</RelativeLayout>